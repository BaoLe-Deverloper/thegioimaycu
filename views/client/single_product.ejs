<%- include('./layout/header.ejs') %>
<div class="product_image_area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="product_img_slide owl-carousel">
                    <div class="single_product_img">
                        <img src="./../../public/img/gallery/gallery1.jpg" alt="#" class="img-fluid">
                    </div>
                    <div class="single_product_img">
                        <img src="./../../public/img/gallery/gallery2.jpg" alt="#" class="img-fluid">
                    </div>
                    <div class="single_product_img">
                        <img src="./../../public/img/gallery/gallery3.jpg" alt="#" class="img-fluid">
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="single_product_text text-center">
                    <h3>Samsung galaxy Note 9</h3>
                    <p>
                        Đây là sản phẩm 99% của chúng tôi, cam kết ...
                    </p>
                    <div class="card_area">
                        <div class="product_count_area">
                            <p>Quantity</p>
